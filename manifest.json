{
  "manifest_version": 3,
  "name": "Jira Time Spent Sum",
  "version": "1.0",
  "description": "Add the time spent sum of all displayed tickets in the time spent column header.",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "css/style.css"
      ],
      "matches": [
        "https://*.atlassian.net/issues/*",
        "https://*.atlassian.net/secure/views/bulkedit/*"
      ]
    }
  ]
}